{%  extends 'base.html.twig' %}

{% block body  %}

    <h1>Sign In</h1>
    
    <form action="{{ path('user_login') }}" method="POST">
        <div class="form-group">
            <input placeholder="Username" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Password" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>

{% endblock %}